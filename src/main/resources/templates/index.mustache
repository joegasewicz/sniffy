{{>layout/header}}
<div class="container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">App Name</th>
            <th scope="col">URL</th>
            <th scope="col">Type</th>
        </tr>
        </thead>
        <tbody>
        {{#applications}}
            <tr>
                <th scope="row">{{id}}</th>
                <th scope="row"><a href="/applications/{{id}}">{{name}}</a></th>
                <th scope="row"><a href="{{url}}">{{url}}</a></th>
                <th scope="row">{{type}}</th>
            </tr>
        {{/applications}}
        </tbody>

    </table>
</div>
{{>layout/footer}}
